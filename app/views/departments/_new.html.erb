<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1><%= t ".title" %></h1>
    </div>
    <%= simple_form_for @department, remote: true do |f| %>
      <div class="modal-body">
        <div class="form_errors">
          <%= render "shared/error_messages", object: @department %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :abbreviation %>
          <%= f.text_field :abbreviation, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <span class="pull-right">
          <%= f.submit t(".create_button"), class: "btn btn-primary" %>
        </span>
        <span class="pull-left">
          <%= link_to t(".cancel_button"), departments_path,
            class: "btn btn-warning", data: {dismiss: "modal"} %>
        </span>
      </div>
    <% end %>
  </div>
</div>
