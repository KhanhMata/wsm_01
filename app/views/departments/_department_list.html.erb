<div class="banner-w3agile">
  <div class="row">
    <div class="col-md-12">
      <%= link_to t(".new_department"), new_department_path, remote: true,
        class: "btn btn-primary" %>
    </div>
  </div>
  <div class="container">
    <h3>
      <table class="table table-department-information">
        <tbody>
          <tr>
            <td><%= t ".staff_number" %></td>
            <td><%= link_to @users.size, users_path %></td>
          </tr>
          <tr>
            <td><%= t ".staff_with_no_department" %></td>
            <td><%= @staff_with_no_department %></td>
          </tr>
        </tbody>
      </table>
      <span>
        <h1><%= t ".title" %></h1>
      </span>
    </h3>
  </div>
</div>
<div class="containe">
  <div class="col-md-12">
    <table  id="table_list" class="table table-striped table-bordered">
      <tr>
        <th class="text-center"><%= t ".index_num" %></th>
        <th class="text-center"><%= t ".name" %></th>
        <th class="text-center"><%= t ".number_of_staffs" %></th>
        <th class="text-center" colspan="2"><%= t ".actions" %></th>
      </tr>
      <tbody>
        <%= render "department_item" %>
      </tbody>
    </table>
    <%= paginate @departments %>
  </div>
  <div id="level-modal" class="modal fade"></div>
</div>
