<div class="content">
  <div class="women_main">
    <h1><% t "title" %></h1>
    <div class="row">
      <div class="agiler">
        <div class="main">
          <%= tag(:br) %><%= tag(:br) %>
          <div class="edit"><center><h4><%= t ".title" %></h4></center></div>
          <%= tag(:br) %><%= tag(:br) %>
          <div class="edit-form profile">
            <div class="edit-form">
              <%= simple_form_for @workspace do |f| %>
                <%= render "shared/error_messages", object: f.object %>
                <div class="form-group">
                  <%= f.label :number_of_columns %>
                  <%= f.text_field :number_of_columns, value: 0 %>
                </div>
                <div class="form-group">
                  <%= f.label :number_of_rows %>
                  <%= f.text_field :number_of_rows, value: 0 %>
                </div>
                <%= f.submit t(".submit"), class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
