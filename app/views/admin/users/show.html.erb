<% provide :title, @user.name %>
<div class="banner-w3agile">
  <div class="container">
    <h3>
      <span>
        <%= t (".view") %>
      </span>
    </h3>
  </div>
</div>
<div class="container">
  <div class="col-md-11" >
    <%= tag(:br) %>
    <div class="panel panel-info">

      <div class="panel-heading">
        <h3 class="panel-title center"></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <table class="table table-user-information">
              <tbody>
                <tr>
                  <td><%= t ".name" %></td>
                  <td><%= @user.name %></td>
                </tr>
                <tr>
                  <td><%= t ".email" %></td>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <td><%= t ".workspace" %></td>
                  <td><%= @user.workspace_id %></td>
                </tr>
                <tr>
                  <td><%= t ".created_at" %></td>
                  <td>
                    <%= l @user.created_at, format: :date_time %>
                  </td>
                </tr>
                <tr>
                  <td><%= t ".role" %></td>
                  <td>
                    <span class="label label-danger"><%= @user.role %></span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <%= mail_to @user.email, class: "btn btn-sm btn-primary" do %>
          <i class="glyphicon glyphicon-envelope"></i>
          <%= t ".send_mail" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
