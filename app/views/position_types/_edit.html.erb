<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1><%= t ".title" %></h1>
    </div>
    <div class="women_main">
      <div class="row">
        <div class="agiler">
          <div class="main">
            <div class="edit-form">
              <%= simple_form_for @position_type, remote: true,
                authenticity_token: true do |f| %>
                <div class="modal-body">
                  <div class="form_errors">
                    <%= render "shared/error_messages",
                      object: @position_type %>
                  </div>
                  <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :avatar, class: "col-sm-2 control-label"  %>
                    <div class="col-sm-6">
                      <%= f.file_field :avatar %>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <span class="pull-right">
                    <%= f.submit t(".submit_button"),
                      class: "btn btn-primary" %>
                  </span>
                  <span class="pull-left">
                    <%= link_to t(".cancel_button"), position_types_path,
                      class: "btn btn-warning", data: {dismiss: "modal"} %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
