<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1><%= yield(:modal_title) %></h1>
    </div>
    <%= simple_form_for @company do |f| %>
      <div class="modal-body">
        <div class="form_errors">
          <%= render "shared/error_messages", object: @company %>
        </div>
        <div class="form-group">
          <%= t ".company_name_label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <span class="pull-right">
          <%= f.submit t(".submit_button"), class: "btn btn-primary" %>
        </span>
        <span class="pull-left">
          <%= link_to t(".cancel_button"), root_path,
            class: "btn btn-warning", data: {dismiss: "modal"} %>
        </span>
      </div>
    <% end %>
  </div>
</div>
